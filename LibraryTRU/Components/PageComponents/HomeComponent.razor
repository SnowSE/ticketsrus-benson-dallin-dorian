@using LibraryTRU.Data
@using LibraryTRU.IServices
@inject IConcertService ics
@inject NavigationManager nm
<PageTitle>Home</PageTitle>

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>Select an event</h1>
        </div>
    </div>
</div>
<div id="selectionbuttons">
    <div>
        @if(Concerts is not null)
        {
            @foreach (Concert show in Concerts)
            {
                <button class="btn btn-primary" href="purchase/concertname" style="margin: 3px;" @onclick="NavigateToPage">@show.EventName - @show.StartTime</button> 
                <br />
            }
        }
            
    </div>
</div>

@code {
    List<Concert> Concerts;

    protected override async Task OnInitializedAsync()
    {
        Concerts = (List<Concert>)await ics.GetAll();
    }

    public void NavigateToPage(){
        nm.NavigateTo($"/purchase/{}")
    }
}
